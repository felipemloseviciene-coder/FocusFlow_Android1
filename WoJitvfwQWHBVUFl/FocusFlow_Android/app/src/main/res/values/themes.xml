<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FocusFlow" parent="android:Theme.Material.NoActionBar">
        <!-- Cores principais - Tema Escuro AMOLED -->
        <item name="android:colorBackground">#000000</item>
        <item name="android:colorForeground">#FFFFFF</item>
        <item name="android:colorPrimary">#1F88E5</item>
        <item name="android:colorPrimaryDark">#0D47A1</item>
        <item name="android:colorAccent">#00BCD4</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B0B0B0</item>
        <item name="android:windowBackground">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.FocusFlow.Overlay">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
</resources>
